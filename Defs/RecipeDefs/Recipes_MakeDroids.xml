  <RecipeDef ParentName="BaseDroidRecipe">
    <defName>MD2MakeLogisticsDroid</defName>
    <label>make logistics droid</label>
    <description>
      Constructs a logistics droid.
      --Requires 75 metal.
    </description>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Metal</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
		</ingredients>
		<products>
      <MD2SpawnLogisticsDroid>1</MD2SpawnLogisticsDroid>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Metal</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillGains>
			<li>
				<skill>Crafting</skill>
				<xp>130</xp>
			</li>
		</skillGains>
	</RecipeDef>

